{% extends 'base.html.twig' %}

{% block title %} My new website ! - Equipes {% endblock %}

{% block body %}

    <h1> Vous trouverez ici toutes les Ã©quipes de Ligue 1 </h1>

    <section class="equipe">
        <table class="table">
            <tr>
                <th> Id </th>
                <th> Nom </th>
                <th> Nombre de joueurs </th>
                <th> Ecusson </th>
                <th> Action </th>
            </tr>
            {% for e in equipe %}
                <tr>
                    <td> {{ e.id }} </td>
                    <td> {{ e.nom }} </td>
                    <td> {{ e.nbjoueur }} </td>
                    <td> <img src="{{ asset('img/'~e.ecusson) }}" alt="{{ e.nom }}"> </td>
                    <td> <a href="{{ path('equipeDetails', {id: e.id}) }}"> Voir plus </a> </td>
                </tr>
            {% endfor %}
        </table>
    </section>

{% endblock %}